@model USETHISAddressBookMVC.Models.Contact

@{
    ViewData["Title"] = "Create";
}


<h1>EDIT CONTACT</h1>
<div class="p-3 border border-2 shadow-lg bg-light">
    <form asp-action="Create" asp-controller="Contacts" enctype="multipart/form-data">
        <div class="row g-3 p-2">
            <div class="col-12 col-lg-4">
                <div class="square-img-container">
                    <img class="square-img" src="~/img/DefaultContactImage.png" id="contactImage">
                </div>
                <div>
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input type="file" class="form-control" accept=".png,.jpg,.jpeg,.gif">
                </div>
            </div>
        </div>


        <div class="col-12 col-lg-8">
            <div class="row">


                @*First name, last name, email, phone, address, address2, city, state, zip*@

                <div class="col-12 col-lg-6 ">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input class="form-control" asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-12 col-lg-6">
                    <label for="LastName" class="form-label">Last Name</label>
                    <input class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-12 col-lg-6 mt-2">
                    <label for="Email" class="form-label">Email</label>
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-12 col-lg-6 ">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input class="form-control" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-12 col-lg-6 ">
                    <label asp-for="Address1" class="form-label">Address</label>
                    <input class="form-control" asp-for="Address1">
                    <span asp-validation-for="Address1" class="text-danger"></span>
                </div>
                <div class="col-12 col-lg-6 ">
                    <label asp-for="City" class="form-label">City</label>
                    <input class="form-control" asp-for="City">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-12 col-lg-4 mt-2">
                    <label for="inputState" class="form-label">State</label>
                    <select iasp-for="State" asp-items="ViewBag.StatesList" class="form-control">
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="col-12 col-lg-6 ">
                    <label asp-for="ZipCode" class="form-label">Zip Code</label>
                    <input class="form-control" asp-for="ZipCode">
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                <div class="col-12 col-lg-6 mt-3">
                    <label asp-for="Categories" class="form-label">Categories</label>
                    <select class="form-select" multiple aria-label="multiple select example">
                        <option selected>Friends</option>
                        <option value="1">Family</option>
                        <option value="2">Wedding</option>
                    </select>
                </div>
                <div class="col-12 col-lg-6 mt-3">
                    <label asp-for="BirthDate" class="form-label">Birthday</label>
                    <input class="form-control" asp-for="BirthDate">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="col-12 d-flex justify-content-end mt-2">
                    <button type="submit" class="btn btn-lg btn-primary rounded-pill">Save</button>
                </div>
            </div>
        </div>


    </form>
</div>







