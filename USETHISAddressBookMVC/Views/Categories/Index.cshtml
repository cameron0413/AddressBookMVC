@model IEnumerable<USETHISAddressBookMVC.Models.Category>

@{
    ViewData["Title"] = "Index";
}




<div class="row">
    <div class="col-12 text-end mb-2">
        <a class="btn btn-primary rounded-pill" asp-controller="Categories" asp-action="Create">Create New</a>
    </div>
</div>



<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th colspan="2">
                        My Categories
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => category.AppUser.Id)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@category.Id" asp-controller="Categories"><i class="bi bi-pencil-fill"></i></a> |
                            <a asp-action="EmailCategory" asp-route-id="@category.Id" asp-controller="Categories"><i class="bi bi-envelope-fill"></i></a> |
                            <a asp-action="Delete" asp-route-id="@category.Id" asp-controller="Categories"><i class="bi bi-trash-fill "></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

